# ===========================
# Database (PostgreSQL in Docker, no password)
# ===========================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=       # empty
POSTGRES_DB=btcpayserver
DATABASE_TYPE=Postgres
DATABASE_URL=postgres://postgres:@btcpay-postgres:5432/btcpayserver

# ===========================
# NBXplorer Postgres (no password)
# ===========================
EXPLORER_POSTGRES_USER=postgres
EXPLORER_POSTGRES_PASSWORD=       # empty
EXPLORER_POSTGRES_DB=nbxplorer
BTCPAY_EXPLORERPOSTGRES=User ID=postgres;Include Error Detail=true;Host=btcpay-postgres;Port=5432;Database=nbxplorer

# ===========================
# NBXplorer
# ===========================
RPC_USER=rpcuser
RPC_PASSWORD=rpcpass
RPC_URL=http://bitcoin:18443/
NBXPLORER_URL=http://btcpay-nbxplorer:32838/

# ===========================
# Bitcoin Core (regtest)
# ===========================
BITCOIN_RPCUSER=rpcuser
BITCOIN_RPCPASSWORD=rpcpass
BITCOIN_TXINDEX=1
BITCOIN_SERVER=1
BITCOIN_NETWORK=regtest

# ===========================
# BTCPayServer
# ===========================
BTCPAY_NETWORK=regtest
BTCPAY_CHAINS=btc
BTCPAY_HTTPSREDIRECT=false
